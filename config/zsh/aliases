## color
alias grep='grep --color=auto'
alias dmesg='dmesg --color=always'

## flags
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias md='mkdir -pv'
alias df='df -Th --sync'
alias du='du -h'
alias free='free -m'
alias wget='wget --hsts-file=~/.cache/wget-hsts'
alias bat='bat --style numbers,header --theme ansi'

## misc
alias doas='doas '
alias sudo='doas '
alias mkex='chmod -v a+x'
alias mine='chown $USER:$USER -Rv'
alias udevrel='udevadm control --reload-rules && udevadm trigger'

# shortcuts
alias rf='rm -rf'
alias jp2aa='jp2a --color --color-depth=24'

## lista
alias exa='exa --color=always --group-directories-first'
alias ls='exa -aF  -s type'
alias la='exa -lab -s type --no-time'
alias le='exa -lab -s type'
alias lu='exa -lab -s time'
alias tree='exa -aT -s type'

# xbps
alias xe='doas xbps-install'
alias xg='xbps-query'
alias xu='doas xbps-install -Syuv'
alias xr='doas xbps-remove'
alias xver='xbps-query -p pkgver'

# youtube-dl
alias ytdln='yt-dlp -f bestvideo+bestaudio --restrict-filenames'
alias ytdla='yt-dlp -f bestaudio --restrict-filenames'

# firefox arkenfox userjs
alias arku='./updater.sh -s'
alias arks='./prefsCleaner.sh -s'

# misc
alias rl='exec zsh'
alias csmp='doas make {uninstall,clean,install} && doas make clean'
alias nvs='nvidia-settings --config=$XDG_CONFIG_HOME/nvidia/settings'
alias hst="history 1 -1 | cut -c 8- | sort | uniq | fzf | tr -d '\n' | xclip -sel c"

## edit
alias e='$EDITOR'
alias de='doasedit'

# these two are life safing
alias ea='e "$(fd -Hc never . "$HOME"  -t f | fzf)"'
alias c='cd "$(fd -Hc never . "$HOME" -t d | fzf)"'

# vim: ft=sh
