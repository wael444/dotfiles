set ratios 1:2:3
set cleaner     ~/.config/lf/hl
set previewer   ~/.config/lf/pv
set preview    true
set hidden     true
set icons      false
set ignorecase true
set hidden     true

cmd setwallpaper %cp "$f" ~/.config/wall.png && xwallpaper --zoom "$f"
cmd dragon %dragon -a -x $fx
## https://github.com/gokcehan/lf/blob/master/doc.go

# unbind
map h
map j
map k
map l
map m
map n
map space

# movement
map w up
map a updir
map s down
map d open
map W half-up
map <c-w> top
map S half-down
map <c-s> bottom

# actions
map r rename
map x cut
map v paste
map c copy
map g dragon
map R reload
map C clear
map D delete
map f find
map <space> :toggle; down

# misc
map b setwallpaper
map q quit
map <enter> shell

# defaults, will need just to know what shit does
map zh set hidden!
map zr set reverse!
map zn set info
map zs set info size
map zt set info time
map za set info size:time
map zz set sortby ext
