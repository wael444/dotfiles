#!/usr/bin/bash
run() {
	# yes this all just to avoid stest(1)
	IFS=: ans=$(for d in $PATH; do find $d 2>/dev/null -perm /111 \
		| sed "s/.*\///"; done | sort -R | uniq | dmenu "$@" -p run)
			# this pipes all output of $ans to 'nott' (shows all output via dunst)
			# $ans is run via sh cuz arguments or something idfk
#			[ ! -z "$ans" ] && sh -c "$ans" 2>&1 | nott "$ans"
}

run
